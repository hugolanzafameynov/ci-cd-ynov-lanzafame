{
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/src/setupTests.js"],
  "transform": {
    "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(axios|@babel|@testing-library))"
  ],
  "moduleFileExtensions": [
    "js",
    "jsx",
    "ts",
    "tsx"
  ],
  "moduleNameMapper": {
    "\\.(css|less|scss|sass)$": "identity-obj-proxy",
    "\\.(jpg|jpeg|png|gif|svg)$": "identity-obj-proxy"
  },
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!src/index.js",
    "!src/reportWebVitals.js",
    "!src/**/*.test.{js,jsx}",
    "!src/**/*.spec.{js,jsx}",
    "!src/setupTests.js",
    "!src/test-utils.js",
    "!src/**/*.stories.{js,jsx}",
    "!src/**/__tests__/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 80,
      "statements": 80
    },
    "src/components/**/*.js": {
      "branches": 75,
      "functions": 80,
      "lines": 85,
      "statements": 85
    },
    "src/services/**/*.js": {
      "branches": 80,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "coverageReporters": [
    "text",
    "lcov",
    "html",
    "json",
    "json-summary"
  ],
  "coverageDirectory": "coverage",
  "testMatch": [
    "<rootDir>/src/**/__tests__/**/*.{js,jsx}",
    "<rootDir>/src/**/?(*.)(test|spec).{js,jsx}"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/build/",
    "<rootDir>/cypress/",
    "<rootDir>/src/test-utils.js"
  ],
  "verbose": true,
  "bail": false,
  "maxWorkers": "50%"
}